div
	h1 Busca entre más de 61000 avisos de inmuebles
	form
		select.search-type.bg-orange
			option Quiero comprar
			option Quiero alquilar
		select.search-type.search-categorie
			option Quiero Departamento
			option Quiero Casas
			option Terrenos
			option Oficinas
			option Locales
			option Todos
		input(type="text" placeholder="Busca por distrito, descripción o código").input_txtsearch
		button.btn.btn-search.bg-orange Buscar




style.
	.search-type{
		border-radius: 6px 0 0 6px;
	    cursor: pointer;
	    font-size: 16.8px;
	    height: 52px;
	    line-height: 52px;
	    padding: 0 12.6px;
	    width: 192.5px;
	    color: white;
	    border: none;
	}
	.search-categorie{
		color: black;
	    width: 229.6px
	}
	.input_txtsearch{
		border: 1px solid #fff;
	    border-radius: 0 6px 6px 0;
	    font-size: 16px;
	    height: 52px;
	    line-height: 17px;
	    padding: 0 14px;
	    width: 475px;
	}
	.btn{
	    border: none;
	    border-radius: 5px;
	    color: #fff;
	    cursor: pointer;
	    font: 18.2px/19.6px gotham,arial,sans-serif;
	    padding: 9px 30px 7px;
	    transition: color,background .3s ease-in;
	    -webkit-transition: color,background .3s ease-in;
	    -moz-transition: color,background .3s ease-in;
	    -ms-transition: color,background .3s ease-in;
	    -o-transition: color,background .3s ease-in;
	    outline: 0;
	}
	.btn-search{
		float: right;
	    margin-top: 13px;
	    margin-right: 34px;
	    font-size: 20px;
	    font-weight: 600;
	}